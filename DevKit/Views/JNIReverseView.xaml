<UserControl
    x:Class="DevKit.Views.JNIReverseView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    Width="615"
    Height="595"
    d:DataContext="{d:DesignInstance Type=vm:JNIReverseViewModel}"
    Background="{DynamicResource DevKitBackgroundBrush}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="NDK目录" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalContentAlignment="Center"
                hc:InfoElement.Placeholder="精确到版本号，如：D:\Dev\Android\Sdk\ndk\21.4.7075529"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                Text="{Binding NdkPath}" />

            <Button
                Grid.Column="2"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding SelectNdkCommand}"
                Content="设置" />
        </Grid>

        <Grid Grid.Row="1" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="动态库路径" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                hc:InfoElement.Placeholder="请选择报错的Android动态库文件（*.so）"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                Text="{Binding SharedFilePath}"
                ToolTip="{Binding SharedFilePath}" />

            <Button
                Grid.Column="2"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding SelectSharedFileCommand}"
                Content="选择" />
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="报错堆栈" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalContentAlignment="Center"
                hc:InfoElement.Placeholder="请输入C++报错内存地址，如：0000000000131b60"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                Text="{Binding StackAddress}" />

            <Button
                Grid.Column="2"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding ReverseAddressCommand}"
                Content="逆向" />
        </Grid>

        <TextBox
            Grid.Row="3"
            Margin="10,0,10,10"
            Padding="5,3"
            VerticalContentAlignment="Top"
            Background="#0C0C0C"
            BorderThickness="0"
            FontSize="14"
            Foreground="#00FF00"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Text="{Binding OutputResult}"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>
