<UserControl
    x:Class="DevKit.Views.ApplicationPackageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ut="clr-namespace:DevKit.Utils"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:ApplicationPackageViewModel}"
    d:DesignHeight="560"
    d:DesignWidth="600"
    Background="white"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="JDK目录" />

            <!--  hc:InfoElement.ShowClearButton="True"  -->
            <TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalContentAlignment="Center"
                FontSize="14"
                Text="{Binding JdkPath}" />

            <Button
                Grid.Column="2"
                Command="{Binding SelectJdkCommand}"
                Content="设置" />
        </Grid>

        <Grid Grid.Row="1" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="证书" />

            <!--  hc:InfoElement.Placeholder="请配置签名秘钥文件（*.jks）"  -->
            <!--  hc:InfoElement.ShowClearButton="True"  -->
            <TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="14"
                Text="{Binding KeyFilePath}"
                ToolTip="{Binding KeyFilePath}" />

            <Button
                Grid.Column="2"
                Command="{Binding CreateKeyCommand}"
                Content="&#xe6aa;"
                FontFamily="/DevKit;component/Fonts/#iconfont" />

            <Button
                Grid.Column="3"
                Margin="10,0,0,0"
                Command="{Binding SelectKeyCommand}"
                Content="选择" />
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="别名" />

            <!--  hc:InfoElement.Placeholder="请输入证书别名"  -->
            <!--  hc:InfoElement.ShowClearButton="True"  -->
            <TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalContentAlignment="Center"
                FontSize="14"
                Text="{Binding KeyAlias}" />

            <TextBlock
                Grid.Column="2"
                VerticalAlignment="Center"
                Text="密码" />

            <!--  hc:InfoElement.Placeholder="请输入密码"  -->
            <PasswordBox
                Grid.Column="3"
                Margin="10,0,0,0"
                VerticalContentAlignment="Center"
                ut:PasswordAttachAttribute.Attach="True"
                ut:PasswordAttachAttribute.Password="{Binding KeyPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                FontSize="14" />

            <Button
                Grid.Column="4"
                Margin="10,0,0,0"
                Command="{Binding ShowSha1Command}"
                Content="查看SHA1" />
        </Grid>

        <TextBox
            Grid.Row="3"
            Margin="10,0"
            Padding="5,3"
            VerticalContentAlignment="Top"
            Background="#0C0C0C"
            BorderThickness="0"
            FontSize="14"
            Foreground="#00FF00"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Text="{Binding OutputResult}"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto" />

        <Grid Grid.Row="4" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="根目录" />

            <!--  hc:InfoElement.Placeholder="请输入（选择）含有APK安装包的根目录"  -->
            <!--  hc:InfoElement.ShowClearButton="True"  -->
            <TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="14"
                Text="{Binding ApkRootFolderPath}" />

            <Button
                Grid.Column="2"
                Command="{Binding SelectApkRootFolderCommand}"
                Content="选择" />

            <Button
                Grid.Column="3"
                Margin="10,0,0,0"
                Command="{Binding RefreshApkFilesCommand}"
                Content="&#xe602;"
                FontFamily="/DevKit;component/Fonts/#iconfont"
                FontSize="16" />
        </Grid>

        <ListBox
            x:Name="TargetListBox"
            Grid.Row="5"
            Margin="10,0"
            HorizontalContentAlignment="Stretch"
            BorderThickness="0"
            ItemsSource="{Binding ApkFileCollection}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="{Binding}"
                            TextWrapping="Wrap" />

                        <Button
                            Grid.Column="1"
                            BorderThickness="0"
                            Command="{Binding DataContext.OpenFileFolderCommand, ElementName=TargetListBox}"
                            CommandParameter="{Binding}"
                            Content="&#xe701;"
                            FontFamily="/DevKit;component/Fonts/#iconfont"
                            FontSize="16" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border
                                    x:Name="ItemContainerBorder"
                                    Padding="10"
                                    BorderThickness="0"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                </Border>

                                <!-- <ControlTemplate.Triggers> -->
                                <!--     <Trigger Property="IsSelected" Value="True"> -->
                                <!--         <Setter TargetName="ItemContainerBorder" Property="Background" Value="{DynamicResource DarkDefaultBrush}" /> -->
                                <!--         <Setter TargetName="ItemContainerBorder" Property="TextBlock.Foreground" Value="{DynamicResource PrimaryBrush}" /> -->
                                <!--     </Trigger> -->
                                <!-- </ControlTemplate.Triggers> -->
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>