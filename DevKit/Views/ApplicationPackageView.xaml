<UserControl
    x:Class="DevKit.Views.ApplicationPackageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:utils="clr-namespace:DevKit.Utils"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    Width="615"
    Height="595"
    d:DataContext="{d:DesignInstance Type=vm:ApplicationPackageViewModel}"
    Background="{DynamicResource DevKitBackgroundBrush}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Width="60"
                VerticalAlignment="Center"
                Text="JDK目录" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalContentAlignment="Center"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                Text="{Binding JdkPath}" />

            <Button
                Grid.Column="2"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding SelectJdkCommand}"
                Content="设置" />
        </Grid>

        <Grid Grid.Row="1" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Width="60"
                VerticalAlignment="Center"
                Text="证书路径" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                hc:InfoElement.Placeholder="请配置签名秘钥文件（*.jks）"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                Text="{Binding KeyFilePath}"
                ToolTip="{Binding KeyFilePath}" />

            <Button
                Grid.Column="2"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding SelectKeyCommand}"
                Content="选择" />
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Width="60"
                VerticalAlignment="Center"
                Text="签名别名" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalContentAlignment="Center"
                hc:InfoElement.Placeholder="请输入证书别名"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                Text="{Binding KeyAlias}" />

            <TextBlock
                Grid.Column="2"
                VerticalAlignment="Center"
                Text="密码" />

            <PasswordBox
                Grid.Column="3"
                Margin="10,0,0,0"
                VerticalContentAlignment="Center"
                utils:PasswordAttachAttribute.Attach="True"
                utils:PasswordAttachAttribute.Password="{Binding KeyPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14" />

            <Button
                Grid.Column="4"
                Margin="10,0,0,0"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding ShowSha1Command}"
                Content="查看SHA1" />
        </Grid>

        <TextBox
            Grid.Row="3"
            Margin="10,0"
            Padding="5,3"
            VerticalContentAlignment="Top"
            Background="#0C0C0C"
            BorderThickness="0"
            FontSize="14"
            Foreground="#00FF00"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Text="{Binding OutputResult}"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto" />

        <Grid Grid.Row="4" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Width="60"
                VerticalAlignment="Center"
                Text="根目录" />

            <hc:TextBox
                Grid.Column="1"
                Margin="10,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                hc:InfoElement.Placeholder="请输入（选择）含有APK安装包的根目录"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                Text="{Binding ApkRootFolderPath}" />

            <Button
                Grid.Column="2"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding SelectApkRootFolderCommand}"
                Content="选择" />

            <Button
                Grid.Column="3"
                Margin="10,0,0,0"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                Command="{Binding RefreshApkFilesCommand}"
                Content="&#xe602;"
                FontFamily="/DevKit;component/Fonts/#iconfont"
                FontSize="16" />
        </Grid>

        <ListBox
            x:Name="TargetListBox"
            Grid.Row="5"
            Margin="5,0,5,10"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding ApkFileCollection}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ToolTip="{Binding FullName}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <Button
                                Width="60"
                                Height="60"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding DataContext.OpenFileFolderCommand, ElementName=TargetListBox}"
                                CommandParameter="{Binding FullName}">
                                <Image Source="/DevKit;component/Images/apk.png" />
                            </Button>

                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="{Binding ExtraInfo}" />
                        </StackPanel>

                        <Grid Grid.Column="1" Margin="0,5,5,5">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Text="{Binding FileName}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,3"
                                FontSize="12"
                                Text="{Binding FileSize, StringFormat={}大小：{0}}" />
                            <TextBlock
                                Grid.Row="2"
                                FontSize="12"
                                Text="{Binding Version, StringFormat={}版本：{0}}" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Width" Value="195" />
                    <Setter Property="Height" Value="95" />
                    <Setter Property="Margin" Value="2.5" />
                    <Setter Property="Padding" Value="5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border
                                    x:Name="ItemContainerBorder"
                                    Margin="{TemplateBinding Margin}"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource DevKitMouseOverBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>