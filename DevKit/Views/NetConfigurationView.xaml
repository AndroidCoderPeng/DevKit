<UserControl
    x:Class="DevKit.Views.NetConfigurationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:cvt="clr-namespace:DevKit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance Type=vm:NetConfigurationViewModel}"
    Background="{DynamicResource DevKitBackgroundBrush}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>

        <cvt:EnableStateConverter x:Key="EnableStateConverterKey" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Width="60"
                VerticalAlignment="Center"
                Text="常用命令" />

            <ComboBox
                x:Name="CommandComboBox"
                Grid.Column="1"
                Margin="10,0,0,0"
                VerticalContentAlignment="Center"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                ItemsSource="{Binding CommandItems}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="SelectionChanged">
                        <b:InvokeCommandAction Command="{Binding ItemSelectedCommand}" CommandParameter="{Binding ElementName=CommandComboBox, Path=SelectedItem}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </ComboBox>

            <hc:TextBox
                Grid.Column="2"
                Margin="10,0"
                VerticalContentAlignment="Center"
                hc:InfoElement.Placeholder="请输入要测试的目标地址"
                hc:InfoElement.ShowClearButton="True"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                FontSize="14"
                IsEnabled="{Binding ElementName=CommandComboBox, Path=SelectedItem, Converter={StaticResource EnableStateConverterKey}}"
                Text="{Binding TargetAddress}" />

            <Button
                Grid.Column="3"
                Command="{Binding TestNetCommand}"
                Content="测试"
                IsEnabled="{Binding ElementName=CommandComboBox, Path=SelectedItem, Converter={StaticResource EnableStateConverterKey}}"
                Style="{DynamicResource ButtonPrimary}" />
        </Grid>

        <TextBox
            Grid.Row="1"
            Margin="10,0,10,10"
            Padding="5,3"
            VerticalContentAlignment="Top"
            Background="#0C0C0C"
            BorderThickness="0"
            FontSize="14"
            Foreground="#00FF00"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Text="{Binding OutputResult}"
            TextWrapping="NoWrap"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</UserControl>