<UserControl
    x:Class="DevKit.Views.ColorResourceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:cvt="clr-namespace:DevKit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:utils="clr-namespace:DevKit.Utils"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance Type=vm:ColorResourceViewModel}"
    Background="{DynamicResource DevKitBackgroundBrush}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>

        <cvt:AlphaValueConverter x:Key="AlphaValueConverterKey" />
        <cvt:ColorTagForegroundConverter x:Key="ColorTagForegroundConverterKey" />
    </UserControl.Resources>

    <DockPanel Margin="12" LastChildFill="True">
        <Grid Width="245">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <UniformGrid Grid.Row="0" Rows="1">
                    <Border Padding="10,5" Style="{StaticResource BorderTipDanger}">
                        <TextBlock Text="红色值（R）" />
                    </Border>

                    <TextBox
                        HorizontalContentAlignment="Center"
                        BorderBrush="{DynamicResource DevKitBorderBrush}"
                        FontSize="14"
                        MaxLength="3"
                        Text="{Binding RedColor}" />
                </UniformGrid>

                <UniformGrid
                    Grid.Row="1"
                    Margin="0,10"
                    Rows="1">
                    <Border Padding="10,5" Style="{StaticResource BorderTipSuccess}">
                        <TextBlock Text="绿色值（G）" />
                    </Border>

                    <TextBox
                        HorizontalContentAlignment="Center"
                        BorderBrush="{DynamicResource DevKitBorderBrush}"
                        FontSize="14"
                        MaxLength="3"
                        Text="{Binding GreenColor}" />
                </UniformGrid>

                <UniformGrid Grid.Row="2" Rows="1">
                    <Border Padding="10,5" Style="{StaticResource BorderTipPrimary}">
                        <TextBlock Text="蓝色值（B）" />
                    </Border>

                    <TextBox
                        HorizontalContentAlignment="Center"
                        BorderBrush="{DynamicResource DevKitBorderBrush}"
                        FontSize="14"
                        MaxLength="3"
                        Text="{Binding BlueColor}" />
                </UniformGrid>

                <UniformGrid
                    Grid.Row="3"
                    Margin="0,10"
                    Rows="1">
                    <Border Padding="10,5" Style="{StaticResource BorderTipInfo}">
                        <TextBlock Text="透明度（A）" />
                    </Border>

                    <TextBox
                        HorizontalContentAlignment="Center"
                        BorderBrush="{DynamicResource DevKitBorderBrush}"
                        FontSize="14"
                        MaxLength="3"
                        Text="{Binding AlphaValue}" />
                </UniformGrid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        BorderBrush="{DynamicResource DevKitBorderBrush}"
                        FontSize="14"
                        Text="{Binding ColorHexValue}" />

                    <Button
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        BorderThickness="0"
                        Command="{Binding CopyColorHexValueCommand}"
                        Content="复制"
                        Style="{StaticResource ButtonSuccess}" />
                </Grid>

                <Grid Grid.Row="5" Margin="0,10,0,0">
                    <CheckBox
                        BorderBrush="{DynamicResource DevKitBorderBrush}"
                        Content="RGB转HEX"
                        IsChecked="{Binding IsHexBoxChecked}" />

                    <CheckBox
                        x:Name="AlphaCheckBox"
                        HorizontalAlignment="Right"
                        BorderBrush="{DynamicResource DevKitBorderBrush}"
                        Content="透明度"
                        IsChecked="{Binding IsAlphaBoxChecked}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Margin="0,10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Background="{Binding ColorViewBrush}"
                    CornerRadius="5" />

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding Value, ElementName=AlphaSlider, Converter={StaticResource AlphaValueConverterKey}}" />

                    <Slider
                        x:Name="AlphaSlider"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Stretch"
                        hc:TipElement.Visibility="Collapsed"
                        IsEnabled="{Binding ElementName=AlphaCheckBox, Path=IsChecked}"
                        IsSnapToTickEnabled="True"
                        Maximum="255"
                        Minimum="0"
                        Value="{Binding SliderValue}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="ValueChanged">
                                <b:InvokeCommandAction Command="{Binding AlphaValueChangedCommand}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Slider>
                </Grid>
            </Grid>
        </Grid>

        <ListBox
            Margin="10,0,0,0"
            Padding="0"
            HorizontalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding ColorResources}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="170"
                        Height="60"
                        Background="{Binding Hex}"
                        CornerRadius="5">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Foreground="{Binding Hex, Converter={StaticResource ColorTagForegroundConverterKey}}"
                                Text="{Binding Name}" />

                            <TextBlock
                                Grid.Row="1"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Foreground="{Binding Hex, Converter={StaticResource ColorTagForegroundConverterKey}}"
                                Text="{Binding Hex}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <!--  ListBox横排  -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Stretch" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="utils:ListBoxItemMarginBehavior.ApplyCustomMargin" Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border x:Name="ItemContainerBorder">
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <EventSetter Event="PreviewMouseDown" Handler="ColorListBox_ListBoxItem_PreviewMouseDown" />

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </DockPanel>
</UserControl>
