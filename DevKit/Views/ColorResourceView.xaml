<UserControl
    x:Class="DevKit.Views.ColorResourceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:cvt="clr-namespace:DevKit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:utils="clr-namespace:DevKit.Utils"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance Type=vm:ColorResourceViewModel}"
    Background="{DynamicResource DevKitBackgroundBrush}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>

        <cvt:AlphaValueConverter x:Key="AlphaValueConverterKey" />
        <cvt:ColorTagForegroundConverter x:Key="ColorTagForegroundConverterKey" />
    </UserControl.Resources>

    <DockPanel Margin="10,12" LastChildFill="True">
        <Grid Width="260">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <hc:TextBox
                    Grid.Column="0"
                    hc:InfoElement.Placeholder="请输入HEX颜色值"
                    hc:InfoElement.ShowClearButton="True"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    FontSize="14"
                    Text="{Binding UserInputColorHexValue}" />

                <Button
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding ColorHexToRgbCommand}"
                    Content="转为RGB" />
            </Grid>

            <UniformGrid
                Grid.Row="1"
                Margin="0,10"
                Columns="3"
                Rows="2">
                <TextBox
                    HorizontalContentAlignment="Center"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    FontSize="14"
                    Text="{Binding Red}" />

                <TextBox
                    HorizontalContentAlignment="Center"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    FontSize="14"
                    Text="{Binding Green}" />

                <TextBox
                    HorizontalContentAlignment="Center"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    FontSize="14"
                    Text="{Binding Blue}" />

                <Label
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Red"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Content="R"
                    FontSize="14"
                    Foreground="White" />

                <Label
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Green"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Content="G"
                    FontSize="14"
                    Foreground="White" />

                <Label
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Background="Blue"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Content="B"
                    FontSize="14"
                    Foreground="White" />
            </UniformGrid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Background="{Binding ColorViewBrush}"
                    CornerRadius="5" />

                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Slider
                        x:Name="AlphaSlider"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        hc:TipElement.Visibility="Collapsed"
                        IsSnapToTickEnabled="True"
                        Maximum="255"
                        Minimum="0"
                        Orientation="Vertical"
                        Value="255">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="ValueChanged">
                                <b:InvokeCommandAction Command="{Binding AlphaValueChangedCommand}" CommandParameter="{Binding ElementName=AlphaSlider}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </Slider>

                    <TextBlock Grid.Row="1" Text="{Binding Value, ElementName=AlphaSlider, Converter={StaticResource AlphaValueConverterKey}}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="3" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Content="{Binding ColorHexValue}"
                    FontSize="14" />

                <Button
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding CopyColorHexValueCommand}"
                    Content="复制HEX"
                    Foreground="{DynamicResource PrimaryBrush}" />

                <CheckBox
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Content="透明度" />
            </Grid>
        </Grid>

        <ListBox
            Margin="10,0,0,0"
            HorizontalAlignment="Center"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding ColorResources}"
            ScrollViewer.CanContentScroll="False"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        Width="165"
                        Height="60"
                        Background="{Binding Hex}"
                        CornerRadius="5">
                        <Grid VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                Foreground="{Binding Hex, Converter={StaticResource ColorTagForegroundConverterKey}}"
                                Text="{Binding Name}" />

                            <TextBlock
                                Grid.Row="1"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Foreground="{Binding Hex, Converter={StaticResource ColorTagForegroundConverterKey}}"
                                Text="{Binding Hex}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <!--  ListBox横排  -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Stretch" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="utils:ListBoxItemMarginBehavior.ApplyCustomMargin" Value="True" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <Border x:Name="ItemContainerBorder">
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <EventSetter Event="PreviewMouseDown" Handler="ColorListBox_ListBoxItem_PreviewMouseDown" />

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.8" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </DockPanel>
</UserControl>
