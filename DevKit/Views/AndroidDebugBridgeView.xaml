<UserControl
    x:Class="DevKit.Views.AndroidDebugBridgeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    x:Name="TargetView"
    Width="615"
    Height="400"
    d:DataContext="{d:DesignInstance Type=vm:AndroidDebugBridgeViewModel}"
    Background="{DynamicResource DevKitBackgroundBrush}"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftPanelColumn" Width="1.25*" />
            <ColumnDefinition x:Name="RightPanelColumn" Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Width="100"
                    VerticalAlignment="Center"
                    Text="选择设备" />

                <ComboBox
                    x:Name="DeviceComboBox"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    VerticalContentAlignment="Center"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    FontSize="14"
                    ItemsSource="{Binding DeviceItems}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="SelectionChanged">
                            <b:InvokeCommandAction Command="{Binding DeviceSelectedCommand}" CommandParameter="{Binding ElementName=DeviceComboBox, Path=SelectedItem}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </ComboBox>

                <Button
                    Grid.Column="2"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding RefreshDeviceCommand}"
                    Content="刷新" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DockPanel
                    Grid.Row="0"
                    Margin="10"
                    LastChildFill="True">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Text="设备品牌" />

                    <TextBlock VerticalAlignment="Center" Text="{Binding DeviceBrand}" />
                </DockPanel>

                <DockPanel
                    Grid.Row="1"
                    Margin="10"
                    LastChildFill="True">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Text="ABI架构" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{Binding DeviceAbi}"
                        TextWrapping="Wrap" />
                </DockPanel>

                <DockPanel
                    Grid.Row="2"
                    Margin="10"
                    LastChildFill="True">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Text="Android版本" />

                    <TextBlock VerticalAlignment="Center" Text="{Binding AndroidVersion}" />
                </DockPanel>

                <DockPanel
                    Grid.Row="3"
                    Margin="10"
                    LastChildFill="True">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Text="屏幕分辨率" />

                    <TextBlock VerticalAlignment="Center" Text="{Binding DeviceSize}" />
                </DockPanel>

                <DockPanel
                    Grid.Row="4"
                    Margin="10"
                    LastChildFill="True">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Text="屏幕密度" />

                    <TextBlock VerticalAlignment="Center" Text="{Binding DeviceDensity}" />
                </DockPanel>

                <DockPanel
                    Grid.Row="5"
                    Margin="10"
                    LastChildFill="True">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Text="电池状态" />

                    <StackPanel Orientation="Horizontal">
                        <Border
                            Width="40"
                            Height="18"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="2">
                            <ProgressBar
                                Height="16"
                                Margin="1"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="10"
                                Value="{Binding BatteryProgress}" />
                        </Border>

                        <Border
                            Width="2"
                            Height="10"
                            Background="Black" />

                        <TextBlock Margin="10,0" Text="{Binding BatteryState}" />
                    </StackPanel>
                </DockPanel>

                <DockPanel
                    Grid.Row="6"
                    Margin="10"
                    LastChildFill="True">
                    <TextBlock
                        Width="100"
                        VerticalAlignment="Center"
                        Text="电池温度" />

                    <TextBlock VerticalAlignment="Center" Text="{Binding BatteryTemperature}" />
                </DockPanel>
            </Grid>

            <UniformGrid
                Grid.Row="2"
                Margin="10,0,10,10"
                IsEnabled="{Binding HasSelectedDevice}"
                Rows="2">

                <Button
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding OutputImageCommand}"
                    Content="导出截屏" />

                <Button
                    Margin="5,3,0,3"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding ScreenshotCommand}"
                    Content="截取屏幕" />

                <Button
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding InstallCommand}"
                    Content="安装软件" />

                <Button
                    Margin="5,3,0,3"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding RebootDeviceCommand}"
                    Content="重启设备" />
            </UniformGrid>
        </Grid>

        <Grid x:Name="RightPanel" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="0,10,10,10">
                <TextBlock VerticalAlignment="Center" Text="第三方软件" />

                <Button
                    HorizontalAlignment="Right"
                    BorderBrush="{DynamicResource DevKitBorderBrush}"
                    Command="{Binding SortApplicationCommand}"
                    Content="排序" />
            </DockPanel>

            <ListBox
                x:Name="PackageListBox"
                Grid.Row="1"
                Margin="0,0,10,10"
                BorderBrush="{DynamicResource DevKitBorderBrush}"
                BorderThickness="1"
                ItemsSource="{Binding ApplicationPackages}"
                ScrollViewer.CanContentScroll="False">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="SelectionChanged">
                        <b:InvokeCommandAction Command="{Binding PackageSelectedCommand}" CommandParameter="{Binding ElementName=PackageListBox, Path=SelectedItem}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            Width="95"
                            Command="{Binding UninstallCommand}"
                            Header="卸载" />
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
