<Window
    x:Class="DevKit.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:DevKit.Utils"
    xmlns:vm="clr-namespace:DevKit.ViewModels"
    Title="DevKit（开发者工具集）"
    Width="412"
    Height="654"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    Background="#F3F9FE"
    ResizeMode="CanMinimize"
    WindowStartupLocation="Manual"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ListBoxItemStyleKey" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="Width" Value="114" />
            <Setter Property="Height" Value="80" />
            <Setter Property="Background" Value="White" />
            <Setter Property="utils:ListBoxItemMarginBehavior.ApplyCustomMargin" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border
                            x:Name="ItemContainerBorder"
                            Margin="{TemplateBinding Margin}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#EEEFF0"
                            BorderThickness="1"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F7F9" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Background="White"
            BorderBrush="#EEEFF0"
            BorderThickness="1"
            CornerRadius="5">
            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" />

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Foreground="#1B1B1B"
                    Text="置顶显示" />

                <ToggleButton
                    Grid.Column="2"
                    hc:ToggleButtonAttach.ShowLabel="True"
                    Checked="TopmostToggleButton_Checked"
                    Style="{StaticResource ToggleButtonSwitch}"
                    Unchecked="TopmostToggleButton_Unchecked" />
            </Grid>
        </Border>

        <TextBlock
            Grid.Row="1"
            Margin="5,25,0,8"
            FontSize="15"
            Foreground="#1B1B1B"
            Text="Android工具" />

        <ListBox
            x:Name="AndroidToolsListBox"
            Grid.Row="2"
            Background="Transparent"
            BorderThickness="0"
            ItemContainerStyle="{StaticResource ListBoxItemStyleKey}"
            ItemsSource="{Binding AndroidTools}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseDoubleClick">
                    <b:InvokeCommandAction Command="{Binding AndroidToolsMouseDoubleClickCommand}" CommandParameter="{Binding ElementName=AndroidToolsListBox, Path=SelectedItem}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            FontFamily="/DevKit;component/Fonts/#iconfont"
                            FontSize="30"
                            Foreground="#1B1B1B"
                            Text="{Binding MenuIcon}"
                            TextAlignment="Center" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            FontSize="14"
                            Foreground="#1B1B1B"
                            Text="{Binding MenuName}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <!--  ListBox横排  -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <TextBlock
            Grid.Row="3"
            Margin="5,25,0,8"
            FontSize="15"
            Foreground="#1B1B1B"
            Text="Socket通信工具" />

        <ListBox
            x:Name="SocketToolsListBox"
            Grid.Row="4"
            Background="Transparent"
            BorderThickness="0"
            ItemContainerStyle="{StaticResource ListBoxItemStyleKey}"
            ItemsSource="{Binding SocketTools}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseDoubleClick">
                    <b:InvokeCommandAction Command="{Binding SocketToolsMouseDoubleClickCommand}" CommandParameter="{Binding ElementName=SocketToolsListBox, Path=SelectedItem}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            FontFamily="/DevKit;component/Fonts/#iconfont"
                            FontSize="30"
                            Foreground="#1B1B1B"
                            Text="{Binding MenuIcon}"
                            TextAlignment="Center" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            FontSize="14"
                            Foreground="#1B1B1B"
                            Text="{Binding MenuName}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <!--  ListBox横排  -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <TextBlock
            Grid.Row="5"
            Margin="5,25,0,8"
            FontSize="15"
            Foreground="#1B1B1B"
            Text="其他工具" />

        <ListBox
            x:Name="OtherToolsListBox"
            Grid.Row="6"
            Background="Transparent"
            BorderThickness="0"
            ItemContainerStyle="{StaticResource ListBoxItemStyleKey}"
            ItemsSource="{Binding OtherTools}">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseDoubleClick">
                    <b:InvokeCommandAction Command="{Binding OtherToolsMouseDoubleClickCommand}" CommandParameter="{Binding ElementName=OtherToolsListBox, Path=SelectedItem}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            FontFamily="/DevKit;component/Fonts/#iconfont"
                            FontSize="30"
                            Foreground="#1B1B1B"
                            Text="{Binding MenuIcon}"
                            TextAlignment="Center" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            FontSize="14"
                            Foreground="#1B1B1B"
                            Text="{Binding MenuName}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <!--  ListBox横排  -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Window>